<?xml version="1.0" encoding="UTF-8"?>

<jira-database-config>
  <name>defaultDS</name>
  <delegator-name>default</delegator-name>
  <% case @database["type"] -%>
  <% when "mysql" -%>
  <database-type>mysql</database-type>
  <% when "postgresql" -%>
  <database-type>postgres72</database-type>
  <schema-name>public</schema-name>
  <% when "mssql" -%>
  <database-type>mssql</database-type>
  <schema-name>dbo</schema-name>
  <% when "oracle" -%>
  <database-type>oracle10g</database-type>
  <% end -%>
  <jdbc-datasource>
    <% case @database["type"] -%>
    <% when "mysql" -%>
    <url>jdbc:mysql://<%= @database["host"] %>:<%= @database["port"] %>/<%= @database["name"] %>?useUnicode=true&amp;characterEncoding=UTF8</url>
    <driver-class>com.mysql.jdbc.Driver</driver-class>
    <validation-query>select 1</validation-query>
    <validation-query-timeout>3</validation-query-timeout>
    <% when "postgresql" -%>
    <url>jdbc:postgresql://<%= @database["host"] %>:<%= @database["port"] %>/<%= @database["name"] %></url>
    <driver-class>org.postgresql.Driver</driver-class>
    <validation-query>select version();</validation-query>
    <pool-test-on-borrow>false</pool-test-on-borrow>
    <% when "mssql" -%>
    <url>jdbc:jtds:sqlserver://<%= @database["host"] %>:<%= @database["port"] %>/<%= @database["name"] %></url>
    <driver-class>net.sourceforge.jtds.jdbc.Driver</driver-class>
    <validation-query>select 1</validation-query>
    <% when "oracle" -%>
    <url>jdbc:oracle:thin:@//<%= @database["host"] %>:<%= @database["port"] %>/<%= @database["name"] %></url>
    <driver-class>oracle.jdbc.OracleDriver</driver-class>
    <validation-query>select 1 from dual</validation-query>
    <pool-test-on-borrow>false</pool-test-on-borrow>
    <% end -%>
    <username><%= @database["user"] %></username>
    <password><%= @database["password"] %></password>
    <pool-min-size><%= @database["pool-min-size"] %></pool-min-size>
    <pool-max-idle><%= @database["pool-max-idle"] %></pool-max-idle>
    <pool-max-size><%= @database["pool-max-size"] %></pool-max-size>
    <pool-max-wait><%= @database["pool-max-wait"] %></pool-max-wait>
    <pool-remove-abandoned>true</pool-remove-abandoned>
    <pool-remove-abandoned-timeout>300</pool-remove-abandoned-timeout>
    <pool-test-while-idle>true</pool-test-while-idle>
    <min-evictable-idle-time-millis>60000</min-evictable-idle-time-millis>
    <time-between-eviction-runs-millis>300000</time-between-eviction-runs-millis>
  </jdbc-datasource>
</jira-database-config>
